<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="#fff"/>
            <size android:height="22dp"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="8dp" android:height="22dp">
        <layer-list>
            <item android:width="10dp" android:height="10dp"  android:gravity="center" android:bottom="7dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/blueDark" />
                        <stroke android:color="@color/blueDark" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="14dp" android:height="14dp" android:bottom="18dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#fff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>