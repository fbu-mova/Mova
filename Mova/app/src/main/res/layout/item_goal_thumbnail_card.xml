<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="@dimen/thumbnailWidth"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/elementMargin"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFromGroupIcon"
            android:layout_width="@dimen/profileImage"
            android:layout_height="@dimen/profileImage"
            android:layout_marginRight="@dimen/elementMargin"
            android:clipChildren="true"
            app:cardCornerRadius="@dimen/borderRadiusCircle"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivFromGroupIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/blueMid" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvFromGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="from Group"
            android:textColor="@color/textMain"
            android:textSize="@dimen/textSizeBody" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/thumbnailWidth"
        app:cardBackgroundColor="@color/blueUltraLight"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.mova.GoalProgressBar
                android:id="@+id/goalProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:barHeight="4dp"
                app:goalIndicatorHeight="16dp"
                app:goalIndicatorWidth="4dp"
                app:goalNotReachedColor="@color/blueMid"
                app:goalReachedColor="@color/blueDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unfilledSectionColor="@color/blueLight" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goalProgressBar">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/innerMargin"
                    android:text="Name of Goal"
                    android:textColor="@color/textMain" />

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@color/blueDark" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>