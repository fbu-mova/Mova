<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/elementMargin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Write task here"
            android:inputType="textPersonName"
            android:textColor="@color/purpleLight"
            android:textSize="@dimen/textSizeFocus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon1"
            android:layout_width="@dimen/inlineIcon"
            android:layout_height="@dimen/inlineIcon"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/ivIcon3"
            app:layout_constraintTop_toTopOf="@+id/ivIcon2"
            app:srcCompat="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ivIcon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/btSave"
            app:layout_constraintStart_toEndOf="@+id/ivIcon1"
            app:layout_constraintTop_toTopOf="@+id/btSave"
            app:srcCompat="@color/purpleDark" />

        <ImageView
            android:id="@+id/ivIcon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivIcon1"
            app:srcCompat="@color/colorAccent" />

        <Button
            android:id="@+id/btSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Save"
            android:textSize="@dimen/textSizeBody"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAction" />

    </LinearLayout>

</LinearLayout>