<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GoalProgressBar">
        <attr name="progress" format="integer"/>
        <attr name="filledColor" format="color"/>
        <attr name="unfilledColor" format="color"/>
        <attr name="thickness" format="dimension"/>
        <attr name="maxLength" format="dimension"/>
        <attr name="roundOtherEnd" format="boolean"/>

        <attr name="barOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <attr name="roundSide">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
        </attr>

        <attr name="autoRoundedEnd">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
        </attr>

        <attr name="drawFrom">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EmptyLoaderRecyclerLayout">
        <attr name="emptyText" format="string"/>
    </declare-styleable>

    <declare-styleable name="ProgressStack">
        <attr name="stackThickness" format="dimension"/>
        <attr name="stackLength" format="dimension"/>
        <attr name="valueAnimDuration" format="integer"/>
        <attr name="selectAnimDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EdgeFloatingActionButton">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="image" format="reference"/>
        <attr name="imageMargin" format="dimension"/>
        <attr name="imageTint" format="color"/>
        <attr name="backgroundTint" format="color"/>
        <attr name="edge">
            <flag name="left" value="1"/>
            <flag name="top" value="2"/>
            <flag name="right" value="4"/>
            <flag name="bottom" value="8"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ActionView">
        <attr name="text" format="string"/>
        <attr name="enabled" format="boolean"/>
        <attr name="completed" format="boolean"/>

        <attr name="colorBoxComplete" format="color"/>
        <attr name="colorBoxIncomplete" format="color"/>
        <attr name="colorBoxDisabled" format="color"/>

        <attr name="colorTextComplete" format="color"/>
        <attr name="colorTextIncomplete" format="color"/>
        <attr name="colorTextDisabled" format="color"/>
    </declare-styleable>

    <declare-styleable name="MoodSelectorLayout">
        <attr name="useAlt" format="boolean"/>
    </declare-styleable>

</resources>